<h1>Listing notes</h1>
<br /><br />

<div id="post_form">
  <%= render 'form' %>
</div>

<ul id="posts">
  <%= render :partial => @notes.reverse %>
</ul>

<table>

  <tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @notes.each do |note| %>
    <tr>
      <td><%= note.title %></td>
      <td><%= note.content %></td>
      <td><%= link_to 'Show', note %></td>
      <td><%= link_to 'Edit', edit_note_path(note) %></td>
      <td><%= link_to 'Destroy', note, :confirm => 'Are you sure?', :method => :delete, :remote => true %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Note', new_note_path %>
